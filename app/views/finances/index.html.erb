<html>
<head>
    <meta charset="utf-8">
    <title>Bar Chart</title>
</head>
<body>
    <div class="titles">
        <a href="/" class="chart__title">Bar Chart</a>
    </div>
    <div class="icons">
        <a href="/finances/show" class="chart-btn">
            <i class="fas fa-chart-pie"></i>
        </a>
        <a href="events" class="calendar-btn">
            <i class="far fa-calendar-alt"></i>
        </a>
    </div>
    <div class="sum">
        <div class="sum_title">月別表示</div>
    </div>



    <%# <%# <div style="width: 85vw;"> %>
    <canvas id="chart" width="700" height="250"></canvas>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js" integrity="sha256-R4pqcOYV8lt7snxMQO/HSbVCFRPMdrhAFMH+vr9giYI=" crossorigin="anonymous"></script>
    <script>
        let ctx = $('#chart');
        let mychart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: [
                    '１月',
                    '２月',
                    '３月',
                    '４月',
                    '５月',
                    '６月',
                    '７月',
                    '８月',
                    '９月',
                    '10月',
                    '11月',
                    '12月'
                ],
                datasets: [{
                    label: "食事代",
                    data: <%= @summonth_fooddate %>,
                    backgroundColor: '#afeeee',
                },{
                    label: "購入費",
                    data: <%= @summonth_buydate %>,
                    backgroundColor: '#98fb98',
                },{
                    label: "娯楽費",
                    data: <%= @summonth_amusementdate %>,
                    backgroundColor: '#ffd700',
                },{
                    label: "交通費",
                    data: <%= @summonth_travelingdate %>,
                    backgroundColor: '#ffa07a',
                },{
                    label: "雑費",
                    data: <%= @summonth_otherdate %>,
                    backgroundColor: '#ffb6c1',
                }]
            },
            options: {
                legend: {
                    labels: {
                        fontSize: 20,
                    },
                },
                title: {
                    display: true,
                },
                scaleOverride: true,
                scales: {
                    xAxes: [{
        
                    }],
                    yAxes: [{
                        ticks: {
                            suggestedMax: 50000,
                            suggestedMin: 0,
                            stepSize: 10000,
                            callback: function (value, index, values) {
                                return value + '円';
                            }
                        },
                    }]
                }
            }
        });
    </script>
</body>
</html>



